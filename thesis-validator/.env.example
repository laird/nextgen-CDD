# Ruvector Configuration
RUVECTOR_PATH=./data/ruvector
RUVECTOR_DIMENSIONS=1536
RUVECTOR_METRIC=cosine
RUVECTOR_HNSW_M=16
RUVECTOR_HNSW_EF_CONSTRUCTION=200
RUVECTOR_HNSW_EF_SEARCH=100

# =============================================================================
# LLM Provider Configuration
# =============================================================================
# Choose between 'anthropic' (direct API) or 'vertex-ai' (Google Cloud)
LLM_PROVIDER=anthropic

# =============================================================================
# Option 1: Direct Anthropic API Configuration
# Use this when LLM_PROVIDER=anthropic
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=8192

# =============================================================================
# Option 2: Google Cloud Vertex AI Configuration
# Use this when LLM_PROVIDER=vertex-ai
# =============================================================================
# Google Cloud project ID (required for Vertex AI)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Google Cloud region for Vertex AI (default: us-central1)
GOOGLE_CLOUD_REGION=us-central1

# Model to use with Vertex AI (Claude models are available on Vertex AI)
VERTEX_AI_MODEL=claude-sonnet-4-20250514

# =============================================================================
# Google Cloud Authentication (Application Default Credentials)
# =============================================================================
# Option A: Service Account Key File (for local development or non-GCP environments)
# Set this to the path of your service account JSON key file
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Option B: Workload Identity (for GKE) - No configuration needed
# The default service account is used automatically

# Option C: Default Service Account (for Cloud Run, GCE, Cloud Functions)
# No configuration needed - uses the attached service account

# Option D: User Credentials (for local development)
# Run: gcloud auth application-default login
# No configuration needed after running the command

# =============================================================================
# Embedding Configuration
# =============================================================================
# Provider: 'openai' (recommended for local dev) or 'vertex-ai' (requires GCP auth)
EMBEDDING_PROVIDER=openai
OPENAI_API_KEY=sk-...
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=3072

# =============================================================================
# Web Research
# =============================================================================
TAVILY_API_KEY=tvly-...

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_CLUSTER_MODE=false

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
DATABASE_URL=postgresql://thesis_validator:thesis_validator_secret@localhost:5432/thesis_validator

# =============================================================================
# API Configuration
# =============================================================================
API_PORT=3000
API_HOST=0.0.0.0
JWT_SECRET=your-secret-key-at-least-32-characters-long
CORS_ORIGINS=http://localhost:5173

# =============================================================================
# Authentication (Development Only)
# =============================================================================
# Set to 'true' to disable JWT authentication in development
# This creates a default admin user for all requests
DISABLE_AUTH=true

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_REFLEXION_MEMORY=true
ENABLE_SKILL_LIBRARY=true
ENABLE_PROVENANCE_CERTIFICATES=true
ENABLE_REAL_TIME_EXPERT_SUPPORT=true
